#!/bin/bash

# run as user 1000 and match persistence, so we do not have root owned persistence
export GSUID=1000
export GSGID=1000
(
  cd `dirname $0`
  mkdir persistent 2>&1 > /dev/null
  mkdir persistent/prometheus 2>&1 > /dev/null
  chmod -R 755 persistent
  chown -R 1000:1000 persistent
  docker build . -f rproxy/Dockerfile -t rfielding/rproxy
  docker build . -f tika/Dockerfile -t rfielding/tika
  docker build . -f ./Dockerfile -t rfielding/microcms:latest 
)
