#!/bin/bash

export GSUID=1000
export GSGID=1000
(
  cd `dirname $0`
  mkdir persistent 2>&1 > /dev/null
  (
    cd rproxy
    docker build . -t rfielding/rproxy
  )
  (
    cd tika
    docker build . -t rfielding/tika
  )
  (
    cd react/init/ui
    npm run build
  )
  go mod tidy
  go mod vendor
  (
    # this can take a long, long time
    # but on a clean checkout, this dir may  not exist
    cd react/init/ui
    if [ -d build ]
    then
	    npm install --force
    fi
  )
  docker build -t rfielding/microcms:latest .
)
